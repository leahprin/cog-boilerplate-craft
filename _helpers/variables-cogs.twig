More info: http://twig.sensiolabs.org/doc/tags/set.html #}
{% set cardType = '' %}
{% set postText = '' %}
{% set author = '' %}
{% set network = '' %}
{% set headline = '' %}
{% set author = '' %}
{% set socialLink = '' %}
{% set articleBody = '' %}


{# SOCIAL Variables #}
{% if entry.type == "social" %}
	{% set cardType = 'social' %}
	{% set author = entry.socialAuthor %}
	{% set network = entry.socialNetwork %}
	{% set socialLink = entry.socialLink %}

{# ARTICLE Variables #}
{% elseif entry.type == "article" %}
	{% set cardType = 'article' %}
	{% set headline = entry.title %}
	{% set author = entry.author.fullName %}
	{% set articleBody = entry.articleBody %}
{% endif %}


